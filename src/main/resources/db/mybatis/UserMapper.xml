<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hcsp.UserMapper">
    <select id="getUserByPage" parameterType="map" resultType="User">
        SELECT ID, NAME, TEL, ADDRESS, CREATED_AT, UPDATED_AT
        FROM USER
        <if test="username != null">
            WHERE NAME = #{username}
        </if>
        LIMIT #{offset}, #{limit}
    </select>

    <select id="countUser" parameterType="string" resultType="int">
        SELECT COUNT(ID)
        FROM USER
        <if test="username != null">
            WHERE NAME = #{username}
        </if>
    </select>

    <insert id="batchInsertUsers" parameterType="java.util.List">
        INSERT INTO USER (NAME, TEL, ADDRESS) VALUES
        <foreach collection="list" item="user" separator=",">
            (#{user.name},#{user.tel},#{user.address})
        </foreach>
    </insert>

    <update id="updateUser" parameterType="User">
        update USER
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="tel != null">tel=#{tel},</if>
            <if test="address != null">address=#{address},</if>
        </set>
        where id= #{id}
    </update>

    <delete id="deleteUserById" parameterType="int">
        delete
        from USER
        where ID = #{id}
    </delete>

    <select id="selectUserById" parameterType="int" resultType="User">
        select *
        from USER
        where ID = #{id}
    </select>

    <select id="getInnerJoinOrders" resultMap="order">
        select o.ID as order_id,
        u.ID as user_id,
        u.NAME as user_name,
        u.tel as user_tel,
        u.ADDRESS as user_address,
        g.id as goods_id,
        g.name as goods_name,
        g.PRICE as goods_price,
        (o.GOODS_NUM * o.GOODS_PRICE) as totalPrice
        from "ORDER" as o
        inner join USER as u ON o.USER_ID = u.ID
        inner join GOODS as g on o.GOODS_ID = g.ID
    </select>

    <resultMap id="order" type="com.github.hcsp.mybatis.entity.Order">
        <result property="id" column="order_id"/>
        <result property="totalPrice" column="totalPrice"/>
        <association property="user" javaType="User">
            <result property="id" column="user_id"/>
            <result property="name" column="user_name"/>
            <result property="tel" column="user_tel"/>
            <result property="address" column="user_address"/>
        </association>
        <association property="goods" javaType="com.github.hcsp.mybatis.entity.Goods">
            <result property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
            <result property="price" column="goods_price"/>
        </association>
    </resultMap>
</mapper>