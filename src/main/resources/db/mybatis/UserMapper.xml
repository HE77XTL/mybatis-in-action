<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.hcsp.mybatis.UserMapper">
    <select id="getUserByPage" parameterType="map" resultType="com.github.hcsp.mybatis.entity.User">
        select id,name,tel,address from user
        <if test="username != null">
            where name = #{username}
        </if>
        limit #{offset},#{limit}
    </select>
    <select id="getUsersCount" parameterType="String" resultType="int">
        select count(*) from user
        <if test="username != null">
            where name = #{username}
        </if>
    </select>
    <select id="getUserById" parameterType="int" resultType="com.github.hcsp.mybatis.entity.User">
        select id,name,tel,address from user where id = #{id}
    </select>
    <insert id="batchInsertUsers" parameterType="map">
        insert into user (name,tel,address)
        values
        <foreach item="user" collection="users" separator=",">
            (#{user.name},#{user.tel},#{user.address})
        </foreach>
    </insert>
    <update id="updateUser" parameterType="com.github.hcsp.mybatis.entity.User">
        update user
        <set>
            <if test="name != null">name =#{name},</if>
            <if test="tel != null">tel=#{tel},</if>
            <if test="address != null">address=#{address},</if>
        </set>
        where id = #{id}
    </update>
    <delete id="deleteUserById" parameterType="int">
        delete
        from user
        where id = #{id}
    </delete>
</mapper>